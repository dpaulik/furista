
<div class="wrrapper" id="project_images">
  <% @recipes.each do |r| %>

    <div class="gellary_hold" >
      <div class="white_hold" >
        <% if r.photo_file_name.blank? %>

          <%=link_to image_tag("/assets/missing1.jpg"), "/Rezepte/#{r.recipes_url}" %>  
        <%else%>
          <%=link_to image_tag(r.photo.url(:medium)), "/Rezepte/#{r.recipes_url}"%>  
        <%end%>
        <h4>
          <%= r.title %>
        </h4>

      </div>
      <div class="name_hold" style="overflow: auto;">
        <img src="images/name_img.png" alt="" />

        <%if r.user_id.blank?%>
          <p><%=r.email_address%></p>
        <%else%>
          <p><%=r.user.first_name%>&nbsp;<%=r.user.last_name%></p>
        <%end%>

        <div class="clr"></div>
      </div>

    </div>
  <%end%>
</div>
<script type="text/javascript">



  $('#project_images').isotope({
  // options
  itemSelector : '.gellary_hold',
  layoutMode : 'masonry'
  });
</script>
