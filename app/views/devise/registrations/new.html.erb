<div class="txtalcntr">

  <h1><%= t(:Signup_for)%> Furista</h1>

  <div class="roundedgecontainer">

    <div class="facebookbutton">
      <a href="/auth/facebook" class="services">
        <%= image_tag "fb-connect-large.png", :alt => "Facebook" %>
      </a>
      <br />
      * <%=  t(:We_donot_post_anything_without_your_permission)%>
    </div>
    <div class="or">or</div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :method => :POST) do |f| %>
      <%= devise_error_messages! %>
      <%= f.text_field :first_name, :placeholder => "#{t(:First_Name)}" %>
      <%= f.text_field :last_name, :placeholder => "#{t(:Last_Name)}" %>
      <%= f.email_field :email, :placeholder => "#{t(:Email_Address)}" %>
      <%= f.password_field :password, :placeholder => "#{t(:Password)}" %>
      <%= f.password_field :password_confirmation , :placeholder => "#{t(:Password_confirmation)}"%>
      <div class="createaccount">
        <% if params[:locale].blank? || params[:locale] == :en %>
          <%= f.submit "Create", :type => :image, :src => "../images/creatacount.png" %>
          <%else%>
          <%= f.submit "Create", :type => :image, :src => "../images/creatacount1.png" %>
          <%end%>
       
      </div>
    <% end %>
    <p>
      <%=t(:By_clicking_on)%> "Connect with Facebook" or "Create Account" <%=t(:you_confirm_that_you_accept_the)%> <a href="#">Terms of Service</a>.
    </p>

  </div>

  <div class="roundedgecontainer boldfont">
    <%=t(:Already_a_member_of)%> Furista? <br/>
    <%= link_to("#{t(:Log_In_now)}", new_user_session_path)  %>
  </div>

</div>
