<p>&nbsp;</p>

<div class="content">

  <div class="txtalcntr">



    <div class="roundedgecontainer logincontainer">

      <h1>
        Sign In to Furista
      </h1>

      <p style='padding-top:0px;margin-bottom:20px;'>
			Find the best recipes
      </p>

      <div class="facebookbutton">
        <a href="/auth/facebook" class="services">
          <%= image_tag "facebook-connect-button.png", :alt => "Facebook" %>
        </a>
        <br />
      </div>
      <div class="or">or</div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= f.email_field :email, :placeholder => "Email" %>
        <%= f.password_field :password, :placeholder => "Password" %>

        <div class="createaccount">
          <%= f.submit "", :type => :image, :src => "/assets/login.png" %>
        </div>

        <div class="remebermenextime">
          <%= f.check_box :remember_me %>
                          Remember me next time
        </div>

        <p>
          <%= link_to "Forgot your password?", new_password_path(resource_name), :remote => true %> &nbsp;&nbsp;&nbsp;
          <a href="/users/sign_up">Need an account</a>
        </p>

      </div>

    </div>

  </div>

<% end %>
