<div class="singleunit">
  <label>
    <%= t(:Ingredients)%>
  </label>
  <%= autocomplete_field_tag "ingredient[ingredient][]", "", autocomplete_ingredient_ingredient_recipes_path, :placeholder => "Ingredient", :style=>"width:351px;" %>
</div>
<div class="singleunit" style="margin-left: 241px">
  <label>
    <%=t(:Amount)%>
  </label>
  <%= text_field_tag "ingredient[amount][]", "",:onkeypress => "return isNumberKey(event)" %>
</div>
<div class="singleunit">
  <label>
    <%=t(:Unit)%>
  </label>
  <%= text_field_tag "ingredient[unit][]" %>
</div>
